location:
    patterns:
        - /chroot/export/postgres_*

    one_file_system: true

    repositories:
        - {{ backup_server_hostname }}:{{ backup_server_directory }}/Clients/{{ matrix_domain }}/database/

    exclude_caches: true

storage:
    compression: auto,zstd
    encryption_passphrase: {{ matrix_awx_backup_encryption_passphrase }}
    archive_name_format: '{hostname}-{now}'
    checkpoint_interval: 600

retention:
    keep_daily: 7
    keep_weekly: 4
    prefix: '{hostname}-'

consistency:
    checks:
        - repository
        - archives

    check_last: 3
    prefix: '{hostname}-'
